<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:paddingTop="30dp"
    >

    <EditText
        android:id="@+id/num1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        />
    <EditText
        android:id="@+id/operation"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/num1"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/num2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/operation"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/calBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/num1"
        app:layout_constraintEnd_toEndOf="@id/num2"
        android:text="CALCULATE"
        />
    <TextView
        android:id="@+id/answerDisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/calBtn"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/calBtn"
        app:layout_constraintEnd_toEndOf="@id/calBtn"
        android:textSize="20sp"
        android:text="ANSWER"
        />
</androidx.constraintlayout.widget.ConstraintLayout>