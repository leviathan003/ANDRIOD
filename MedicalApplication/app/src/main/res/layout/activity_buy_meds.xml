<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyMedsActivity"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/app_logo"
        android:id="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avaMedInstructText"
        android:textSize="24sp"
        android:layout_below="@+id/title"
        android:id="@+id/cartInstruct"
        android:textColor="@color/cardBG"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:id="@+id/cartItemView"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cartInstruct"
            >
        </ListView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cartBtnText"
            android:textSize="20sp"
            android:id="@+id/cartBtn"
            android:backgroundTint="@color/btnBG"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/cartItemView"
            />

</RelativeLayout>