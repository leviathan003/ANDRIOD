<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthArticleListActivity"
    android:background="@color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/app_logo"
        android:id="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/healthArtInstruct"
        android:textStyle="bold"
        android:textColor="@color/btnBG"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/healthArtInstruct"
        android:layout_below="@+id/title"
       />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/healthArtInstruct"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/articleList"
        >
    </ListView>

</RelativeLayout>