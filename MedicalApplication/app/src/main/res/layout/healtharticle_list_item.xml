<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/articleCard"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/btnBG"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/thumbnailLay"
            android:background="@color/white"
            android:layout_marginStart="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/articleThumbnail"
                android:text="@string/defInstructText"
                android:maxWidth="300dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/readPrompt"
                android:text="@string/readPromptText"
                android:textSize="15sp"
                android:textColor="@color/btnBG"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>