<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/transparent"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        >
        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@color/btnBG" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/medName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defInstructText"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/medCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/defInstructText"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/medQtyInstruct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/defInstructText"
                    android:textColor="@color/black"
                    android:textSize="23sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addBtn"
                android:textColor="@color/white"
                android:backgroundTint="@color/btnBG"
                android:text="@string/addBtnText"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subBtn"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/btnBG"
                android:text="@string/subBtnText"
                android:textStyle="bold"
                android:textSize="20sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>