<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatActivity"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/chatsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/app_icon_white"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/recieverName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="User Name"
               android:textSize="20sp"
               android:textColor="@color/white"
               />
           <TextView
               android:id="@+id/recieverStatus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="status"
               android:textSize="12sp"
               android:textColor="@color/white"
               />
       </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/chatsToolbar"
        app:layout_constraintBottom_toTopOf="@+id/messageEntryLay"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:id="@+id/messageEntryLay"
        >
        <EditText
            android:id="@+id/messageEntry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:background="@drawable/edit_text_underline"
            android:hint="Enter Message"
            android:textColorHint="@color/editTextPrimary"
            android:layout_marginStart="5dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendBtn"
            android:layout_width="51dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/textPrimary"
            app:icon="@drawable/send_icon"
            app:iconTint="@color/white"
            android:paddingStart="11.7dp"
            app:iconSize="30dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>