<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindDocsActivity"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableTopCompat="@drawable/app_logo"
        android:id="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="@string/spInstructText"
        android:textColor="@color/btnBG"
        android:textSize="24sp"
        android:id="@+id/spInstruct"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

     <GridLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/spInstruct"
         android:rowCount="3"
         android:columnCount="2"
         android:padding="30dp"
         >

         <androidx.cardview.widget.CardView
             android:layout_gravity="fill"
             android:layout_row="0"
             android:layout_column="0"
             android:layout_rowWeight="1"
             android:layout_columnWeight="1.3"
             app:cardCornerRadius="8dp"
             android:elevation="8dp"
             android:backgroundTint="@color/cardBG"
             android:id="@+id/surgeonCard"
             app:cardUseCompatPadding="true"
             >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/surgeon_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surgeonText"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
            </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_gravity="fill"
             android:layout_row="1"
             android:layout_column="0"
             android:backgroundTint="@color/cardBG"
             android:layout_rowWeight="1"
             android:layout_columnWeight="1"
             app:cardCornerRadius="8dp"
             android:elevation="8dp"
             android:id="@+id/dietecianCard"
             app:cardUseCompatPadding="true"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:gravity="center"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_marginBottom="10dp"
                     android:src="@drawable/deititian_icon"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/dieticianText"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textAlignment="center"
                     />

             </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:backgroundTint="@color/cardBG"
             android:layout_gravity="fill"
             android:layout_row="2"
             android:layout_column="0"
             android:layout_rowWeight="1"
             android:layout_columnWeight="1"
             app:cardCornerRadius="8dp"
             android:elevation="8dp"
             android:id="@+id/dentistCard"
             app:cardUseCompatPadding="true"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:gravity="center"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_marginBottom="10dp"
                     android:src="@drawable/dentist_icon"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/dentistText"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textAlignment="center"
                     />

             </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:backgroundTint="@color/cardBG"
             android:layout_gravity="fill"
             android:layout_row="0"
             android:layout_column="1"
             android:layout_rowWeight="1"
             android:layout_columnWeight="1"
             app:cardCornerRadius="8dp"
             android:elevation="8dp"
             android:id="@+id/physicianCard"
             app:cardUseCompatPadding="true"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:gravity="center"
                 android:orientation="vertical">

                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_marginBottom="10dp"
                     android:src="@drawable/physician_icon"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/physicianText"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textAlignment="center"
                     />
             </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:backgroundTint="@color/cardBG"
             android:layout_gravity="fill"
             android:layout_row="1"
             android:layout_column="1"
             android:layout_rowWeight="1"
             android:layout_columnWeight="1"
             app:cardCornerRadius="8dp"
             android:elevation="8dp"
             android:id="@+id/gyneacologistCard"
             app:cardUseCompatPadding="true"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:gravity="center"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_marginBottom="10dp"
                     android:src="@drawable/gynecologist_icon"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/gyneacologistText"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textAlignment="center"
                     />
             </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:backgroundTint="@color/cardBG"
             android:layout_gravity="fill"
             android:layout_row="2"
             android:layout_column="1"
             android:layout_rowWeight="1"
             android:layout_columnWeight="1"
             app:cardCornerRadius="8dp"
             android:elevation="8dp"
             android:id="@+id/neurologistCard"
             app:cardUseCompatPadding="true"
             >
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:gravity="center"
                 android:orientation="vertical">
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:layout_marginBottom="10dp"
                     android:src="@drawable/neurologist_icon"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/neurologistText"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:textAlignment="center"
                     />

             </LinearLayout>
         </androidx.cardview.widget.CardView>

     </GridLayout>

</RelativeLayout>