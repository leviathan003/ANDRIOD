<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/app_logo"
        android:id="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orderDetInstructText"
        android:textSize="24sp"
        android:textColor="@color/btnBG"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/orderDerInstruct"
        android:layout_below="@+id/title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/orderDerInstruct"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:id="@+id/orderRecView"
        >

    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emptyOrder"
        android:textSize="30sp"
        android:id="@+id/emptyOrders"
        android:textColor="@color/emptyListColor"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>