<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/docCardItem"
        android:backgroundTint="@color/white"
        >
        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/btnBG"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/detailsLay">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spNameDisp"
            android:text="Specialist Name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Expreince(in yrs): "
            android:id="@+id/spExpDisp"
            android:layout_below="@+id/spNameDisp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital: "
            android:textColor="@color/black"
            android:id="@+id/spHospDisp"
            android:layout_below="@+id/spExpDisp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Phone: "
            android:id="@+id/spPhoneDisp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/spNameDisp"
            android:layout_toEndOf="@+id/spExpDisp"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fee(in ruppees):"
            android:textColor="@color/black"
            android:id="@+id/spFeeDisp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/spPhoneDisp"
            android:layout_toEndOf="@+id/spHospDisp"
            android:textSize="14sp"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spHospDisp"
                android:layout_marginTop="10dp"
                android:text="@string/appointmentBtnText"
                android:textColor="@color/white"
                android:backgroundTint="@color/btnBG"
                android:id="@+id/appointmentBtn"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:id="@+id/spProfileImg"
            android:layout_marginEnd="10dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>