<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDataActivity"
    android:background="@color/white"
    >

    <EditText
        android:id="@+id/nameUpdtEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textColorHint="#A8A8A8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="enter name"
        />

    <EditText
        android:id="@+id/emialUpdtEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nameUpdtEntry"
        android:layout_marginTop="20dp"
        android:hint="enter email"
        android:textColorHint="#A8A8A8"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/updtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emialUpdtEntry"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:backgroundTint="@color/black"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>